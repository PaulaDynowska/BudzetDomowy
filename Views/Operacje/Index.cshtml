@model IEnumerable<BudzetDomowyApp.Models.Operacja>

@{
    ViewData["Title"] = "Lista operacji";
}

<div class="container mt-4">
    <h2>Lista operacji</h2>
    <p>
        <a asp-action="Create" class="btn" style="background-color: #7ed957; color: black;">Dodaj nową operację</a>
    </p>

    <div style="background-color: #f2e5d7; border: 2px solid black; border-radius: 8px; padding: 20px;">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kategoria</th>
                    <th>Kwota</th>
                    <th>Data</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Kategoria</td>
                        <td>@item.Kwota.ToString("F2")</td>
                        <td>@item.Data.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #ffc107; color: black;">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

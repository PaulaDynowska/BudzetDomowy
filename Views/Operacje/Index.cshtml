@model IEnumerable<BudzetDomowyApp.Models.Operacja>
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Lista operacji";
}

<!-- FILTRY I PRZYCISKI WYRÓWNANE DO TABELI -->
<div class="d-flex justify-content-between mb-3 px-5" style="margin-top: 20px;">
    <!-- Filtry po lewej -->
    <form method="get" class="d-flex align-items-end gap-2">
        <div>
            <label for="dataOd">Od:</label>
            <input type="date" name="dataOd" class="form-control" value="@Context.Request.Query["dataOd"]" />
        </div>
        <div>
            <label for="dataDo">Do:</label>
            <input type="date" name="dataDo" class="form-control" value="@Context.Request.Query["dataDo"]" />
        </div>
        <button type="submit" class="btn" style="background-color: #bcbcbc; color: #1a472a; font-weight: bold;">Filtruj</button>
    </form>

    <!-- Guzik PDF po prawej -->
    <div>
        <a asp-action="GenerujPdf" class="btn" style="background-color: #bcbcbc; color: #1a472a; font-weight: bold;">Raport PDF</a>
    </div>
</div>

<!-- TABELA -->
<table class="table table-bordered text-center mx-5">
    <thead>
        <tr>
            <th>Nr</th>
            <th>Kategoria</th>
            <th>Kwota</th>
            <th>Data</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Kategoria</td>
                    <td style="color: @(item.Kwota < 0 ? "red" : "green"); font-weight: bold;">
                        @item.Kwota.ToString("N2") zł
                    </td>
                    <td>@item.Data.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-sm"
                           style="background-color: #c0c0c0; color: #1a472a; font-weight: bold;">Szczegóły</a>

                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-sm"
                           style="background-color: #c0c0c0; color: #1a472a; font-weight: bold;">Edytuj</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm"
                           style="background-color: #c0c0c0; color: red; font-weight: bold;">Usuń</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

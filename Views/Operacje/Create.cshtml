@model BudzetDomowyApp.Models.Operacja

@{
    ViewData["Title"] = "Dodaj nową operację";
}

<h2>@ViewData["Title"]</h2>
<h4>Formularz operacji</h4>
<hr />

<div class="p-4 shadow-sm" style="background-color: #f3e9dd; border: 2px solid black; border-radius: 6px;">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Kategoria" class="control-label"></label>
            <select asp-for="Kategoria" class="form-control" asp-items="ViewBag.Kategorie"></select>
            <span asp-validation-for="Kategoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Kwota" class="control-label"></label>
            <input asp-for="Kwota" class="form-control" />
            <span asp-validation-for="Kwota" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data" class="control-label"></label>
            <input asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Zapisz</button>
        </div>
        <div class="form-group mt-2">
            <a asp-action="Index" class="btn btn-dark">Wróć do listy</a>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

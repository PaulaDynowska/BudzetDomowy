@model BudzetDomowyApp.Models.Operacja

@{
    ViewData["Title"] = "Usuń operację";
}

<div class="container mt-4">
    <h2 class="mb-3">Czy na pewno chcesz usunąć?</h2>

    <div style="background-color: #f2e5d7; border: 2px solid black; border-radius: 8px; padding: 20px;">
        <dl class="row">
            <dt class="col-sm-2">Kategoria</dt>
            <dd class="col-sm-10">@Model.Kategoria</dd>

            <dt class="col-sm-2">Kwota</dt>
            <dd class="col-sm-10">@Model.Kwota zł</dd>

            <dt class="col-sm-2">Data</dt>
            <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn" style="background-color: #c0c0c0; color: red; font-weight: bold;">
                Usuń
            </button>

            <a asp-action="Index" class="btn" style="background-color: black; color: white; font-weight: bold;">
                Wróć do listy
            </a>
        </form>
    </div>
</div>

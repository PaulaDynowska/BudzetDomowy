@model BudzetDomowyApp.Models.Operacja

@{
    ViewData["Title"] = "Edytuj operację";
}

<div class="container mt-4">
    <h2 class="mb-3">Edytuj operację</h2>

    <div style="background-color: #f2e5d7; border: 2px solid black; border-radius: 8px; padding: 20px;">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="Kategoria" class="form-label"></label>
                <input asp-for="Kategoria" class="form-control" />
                <span asp-validation-for="Kategoria" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Kwota" class="form-label"></label>
                <input asp-for="Kwota" class="form-control" />
                <span asp-validation-for="Kwota" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Data" class="form-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <button type="submit" class="btn" style="background-color: #ffb347; color: black; font-weight: bold;">
                Zapisz zmiany
            </button>

            <a asp-action="Index" class="btn" style="background-color: black; color: white; font-weight: bold;">
                Wróć do listy
            </a>
        </form>
    </div>
</div>



@model BudzetDomowyApp.Models.Operacja

@{
    ViewData["Title"] = "Edytuj operację";
}

<h2>@ViewData["Title"]</h2>

<div class="p-4 mt-3 shadow-sm" style="background-color: #f2e5d7; border: 2px solid black; border-radius: 8px;">
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Kategoria" class="control-label">Kategoria</label>
            <input asp-for="Kategoria" class="form-control" />
            <span asp-validation-for="Kategoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Kwota" class="control-label">Kwota</label>
            <input asp-for="Kwota" class="form-control" />
            <span asp-validation-for="Kwota" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data" class="control-label">Data</label>
            <input asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Zapisz" class="btn" style="background-color: #5cb85c; color: white;" />
        </div>
    </form>

    <div class="mt-2">
        <a asp-action="Index" class="btn btn-dark">Wróć do listy</a>
    </div>
</div>

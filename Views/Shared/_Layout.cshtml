@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject IViewComponentHelper Component
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> Html

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Capybara Expenses App</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">

    <!-- GÓRNY NAGŁÓWEK -->
    <div class="container-fluid px-5 py-4"
         style="background: linear-gradient(to right, #c0c0c0, #dcdcdc); display: flex; align-items: center;">

        <!-- LEWA CZĘŚĆ: LOGO -->
        <div style="height: 100px; display: flex; align-items: center;">
            <img src="~/images/logo_capybara.png"
                 alt="Capybara logo"
                 style="height: 230px; width: auto;" />
        </div>

        <!-- PRAWA CZĘŚĆ: TYTUŁ I PRZYCISKI -->
        <div class="ms-4 w-100">
            <h1 class="text-start"
                style="font-size: 2.8rem; font-weight: bold; letter-spacing: 1px; color: #1a472a;">
                Capybara Expenses App
            </h1>

            <div class="d-flex flex-wrap gap-3 mt-2">
                <a asp-action="Index" asp-controller="Operacje"
                   class="btn"
                   style="background-color: #1a472a; color: white; font-weight: bold;">
                    Aplikacja
                </a>

                <a asp-action="Create" asp-controller="Operacje"
                   class="btn"
                   style="background-color: #1a472a; color: white; font-weight: bold;">
                    Dodaj nową operację
                </a>

                <a asp-action="Historia" asp-controller="Operacje"
                   class="btn"
                   style="background-color: #bcbcbc; color: #1a472a; font-weight: bold;">
                    Historia konta
                </a>

                <div class="btn"
                     style="background-color: white; color: black; font-weight: bold;">
                    Saldo: @ViewBag.Suma zł
                </div>
            </div>
        </div>
    </div>

    <!-- TREŚĆ STRONY -->
    <div class="container mt-5" style="margin-left: 60px;">
        @RenderBody()
    </div>

    <!-- STOPKA -->
    <footer class="text-center mt-5 mb-3 text-muted">
        &copy; 2025 - Capybara Company
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>

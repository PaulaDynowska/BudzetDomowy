@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject IViewComponentHelper Component
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> Html

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Capybara Expenses App</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">

<!-- GÓRNY NAGŁÓWEK -->
<div class="container-fluid px-5 py-4"
     style="background: linear-gradient(to right, #c0c0c0, #dcdcdc); display: flex; align-items: center; justify-content: space-between;">

    <!-- LOGO PO LEWEJ -->
    <div style="height: 100px; display: flex; align-items: center;">
        <img src="~/images/logo_capybara.png"
             alt="Capybara logo"
             style="height: 130px; width: auto; margin-right: 20px;" />
    </div>

    <!-- TYTUŁ I GUZIKI -->
    <div style="flex-grow: 1;">
        <h1 style="font-size: 2.5rem; font-weight: bold; color: #1a472a; margin-bottom: 15px;">
            Capybara Expenses App
        </h1>

        <div class="d-flex gap-3 flex-wrap align-items-center">
            <a asp-action="Index" asp-controller="Operacje"
               class="btn"
               style="background-color: #1a472a; color: white; font-weight: bold;">
                Aplikacja
            </a>

            <a asp-action="Create" asp-controller="Operacje"
               class="btn"
               style="background-color: #1a472a; color: white; font-weight: bold;">
                Dodaj nową operację
            </a>

            <a asp-action="Historia" asp-controller="Operacje"
               class="btn"
               style="background-color: #1a472a; color: white; font-weight: bold;">
                Historia konta
            </a>

            <a asp-action="Index" asp-controller="Planowanie"
            class="btn"
            style="background-color: #1a472a; color: white; font-weight: bold;">
                Planowanie
            </a>
            <div class="btn"
                 style="background-color: white; color: black; font-weight: bold;">
                Saldo: @ViewBag.Suma zł
            </div>
            <div class="btn" 
                style="background-color: white; color: black; font-weight: bold;">
                Suma planowanych wydatków: @ViewBag.SumaPlanowanych zł
            </div>

        </div>
    </div>
</div>

<!-- ZAWARTOŚĆ STRONY -->
<div class="w-50 px-0 mt-5">
    @RenderBody()
</div>



<!-- STOPKA -->
<footer class="text-center mt-5 mb-3 text-muted">
    &copy; 2025 - Capybara Expenses App
</footer>

@RenderSection("Scripts", required: false)
</body>
</html>

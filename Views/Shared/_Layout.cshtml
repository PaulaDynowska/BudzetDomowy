@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject IViewComponentHelper Component
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> Html

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Budżet Domowy App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">
    <div class="container-fluid p-4" style="background: linear-gradient(to right, #c0c0c0, #dcdcdc); border-bottom: 2px solid #333;">
        
        <!-- NAGŁÓWEK NA ŚRODKU -->
        <div class="text-center">
            <h1 style="font-size: 2.8rem; font-weight: bold; letter-spacing: 1px; color: #1a472a;">
                Budżet Domowy App
            </h1>
        </div>

        <!-- PRZYCISKI I SALDO PONIŻEJ -->
                <div class="d-flex justify-content-center align-items-center gap-3 mt-4 flex-wrap">
            <a asp-action="Index" asp-controller="Operacje"
            class="btn"
            style="background-color: #1a472a; color: white; font-weight: bold; padding: 10px 20px;">
                Aplikacja
            </a>

            <a asp-action="Create" asp-controller="Operacje"
            class="btn"
            style="background-color: #1a472a; color: white; font-weight: bold; padding: 10px 20px;">
                Dodaj nową operację
            </a>

            <a asp-action="Historia" asp-controller="Operacje"
            class="btn"
            style="background-color: #c0c0c0; color: #1a472a; font-weight: bold; padding: 10px 20px;">
                Historia konta
            </a>

            <div class="bg-light border px-4 py-2 rounded shadow-sm" style="min-width: 220px;">
                <strong>Saldo:</strong>
                <span style="font-weight: bold; color: black;">@ViewBag.Suma zł</span>
            </div>
        </div>

    </div>

    <!-- GŁÓWNA TREŚĆ STRONY -->
    <main role="main" class="px-5 py-4">
        @RenderBody()
    </main>

    <!-- STOPKA OPCJONALNA -->
    <footer class="text-center text-muted py-3 small">
        &copy; @DateTime.Now.Year - Budżet Domowy App
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
